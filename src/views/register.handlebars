<div>
  <h1>Registro</h1>

  <div>
    <form action="/api/v1/session/register" method="post">
      <label for="nombre-cliente">Nombre del usuario</label><br />
      <input
        type="text"
        name="nombre"
        id="nombre"
        placeholder="introduzca su nombre"
        required
      /><br />
      <label for="apellido">Apellido</label><br />
      <input
        type="text"
        name="apellido"
        id="apellido"
        placeholder="introduzca su apellido"
        required
      /><br />
      <label for="mail">Email</label><br />
      <input
        type="email"
        name="mail"
        id="mail"
        placeholder="introduzca su correo electronico"
        required
      />
      <br />
      <label for="age">edad</label><br />
      <input
        type="number"
        name="edad"
        id="edad"
        placeholder="introduzca su edad"
        min="0"
        required
      />
      <br />
      <label for="password">Contrasenaas</label><br />
      <input
        type="password"
        name="password"
        id="password"
        placeholder="introduzca su contrasena"
        required
      />
      <br />
      <button type="submit">submit</button>
    </form>
  </div>
</div>